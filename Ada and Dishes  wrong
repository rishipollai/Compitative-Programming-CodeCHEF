#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl "\n"
#define ll long long int
#define mod 10000000007
using namespace std;
int main()
{
    fast;ll t;cin>>t;
    while(t--){
        ll n;cin>>n;
        ll a[n];ll total=0,rem=0;
        for(ll i=0;i<n;i++) cin>>a[i];
        sort(a,a+n);
        if(n==1)
        {
            cout<<a[0]<<endl;
        }
        if(n%2==0)
        {
            for(ll i=n-1;i>=0;i=i-2){
                if(a[i]>0 || a[i-1]>0){
                    total+=max(a[i],a[i-1]);
                }
                rem=abs(a[i]-a[i-1]);
                a[i-2]=a[i-2]-rem;
            }
            cout<<total<<endl;
        }
        else{
            for(ll i=n-1;i>=0;i=i-2){
                if(i==0){
                    if(a[i]>0){
                        total+=a[i];
                    }
                }
                else{
                    if(a[i]>0 || a[i-1]>0){
                        total+=max(a[i],a[i-1]);
                    }
                    rem=abs(a[i]-a[i-1]);
                    a[i-2]=a[i-2]-rem;
                }
            }
             cout<<total<<endl;  
        }
     
    }
    
}

